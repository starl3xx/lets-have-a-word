# Database
DATABASE_URL=postgresql://user:password@localhost:5432/lets_have_a_word

# Farcaster / Neynar
# Get your API key from https://dev.neynar.com/
NEYNAR_API_KEY=your_neynar_api_key_here

# Base RPC (Milestone 4.1)
# Used for CLANKTON balance checking
# Defaults to https://mainnet.base.org if not set
BASE_RPC_URL=https://mainnet.base.org

# ETH Price (Milestone 3.2)
# Used for USD conversion in top ticker
# Defaults to 3000 if not set
ETH_USD_RATE=3000

# Environment
NODE_ENV=development

# Dev Mid-Round Test Mode (Milestone 4.5)
# Set to "true" to enable mid-round test mode in development
# This creates a dev test round with pre-populated guesses and jackpot
# NEVER enable in production!
NEXT_PUBLIC_TEST_MID_ROUND=false

# Dev Mode for Preview/Testing (Milestone 4.8)
# Master switch for dev mode - enables interactive gameplay with no onchain calls
LHAW_DEV_MODE=false

# Fixed solution word for dev mode (defaults to CRANE if not set)
LHAW_DEV_FIXED_SOLUTION=CRANE

# Optional dev user FID (defaults to 12345 if not set)
LHAW_DEV_USER_ID=12345

# Allow forced-state preview mode via URL params (devState, devInput)
LHAW_DEV_FORCE_STATE_ENABLED=false

# Wordnik API (Milestone 4.13 - Optional)
# Used for dictionary generation script: npm run generate-dictionaries:wordnik
# Get your free API key from: https://developer.wordnik.com/
# WORDNIK_API_KEY=your_wordnik_api_key_here
