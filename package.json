{
  "name": "lets-have-a-word",
  "version": "1.0.0",
  "description": "A global, persistent 5-letter word guessing game with ETH jackpots",
  "type": "module",
  "main": "dist/index.js",
  "scripts": {
    "build": "tsc",
    "dev": "tsx watch src/index.ts",
    "start": "node dist/index.js",
    "db:generate": "drizzle-kit generate",
    "db:migrate": "tsx src/db/migrate.ts",
    "db:studio": "drizzle-kit studio",
    "seed": "tsx src/scripts/seed.ts",
    "test": "vitest",
    "validate": "tsx src/scripts/validate-setup.ts"
  },
  "keywords": ["farcaster", "game", "wordle", "eth", "jackpot"],
  "author": "starl3xx",
  "license": "MIT",
  "dependencies": {
    "drizzle-orm": "^0.33.0",
    "postgres": "^3.4.4",
    "dotenv": "^16.4.5"
  },
  "devDependencies": {
    "@types/node": "^22.5.0",
    "drizzle-kit": "^0.24.0",
    "tsx": "^4.19.0",
    "typescript": "^5.5.4",
    "vitest": "^2.0.5"
  }
}
